<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebSocket Demo</title>
</head>
<body>
  <h1>Nhập thông tin người dùng</h1>
  
  <label for="username">Tên người dùng:</label>
  <input type="text" id="username" placeholder="Nhập tên người dùng">
  <br><br>

  <label for="password">Mật khẩu:</label>
  <input type="password" id="password" placeholder="Nhập mật khẩu">
  <br><br>

  <button onclick="sendData()">Gửi thông tin</button>

  <h2>Thông tin từ Server:</h2>
  <div id="response">Chưa có dữ liệu từ server.</div>

  <script>
    // Kết nối WebSocket tới server
    const socket = new WebSocket('ws://localhost:3000');

    socket.onopen = () => {
      console.log('Đã kết nối đến server');
    };

    socket.onmessage = (event) => {
      document.getElementById('response').textContent = event.data;
    };

    socket.onerror = (error) => {
      console.log('Lỗi WebSocket:', error);
    };

    socket.onclose = () => {
      console.log('WebSocket kết thúc kết nối');
    };

    // Gửi dữ liệu từ form tới server
    function sendData() {
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      
      const userData = { username, password };
      
      // Gửi dữ liệu qua WebSocket
      socket.send(JSON.stringify(userData));
    }
  </script>
</body>
</html>
